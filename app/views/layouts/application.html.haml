    = csp_meta_tag
    = stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body.h-full
    %main
      .min-h-full
        %nav.border-b.border-gray-200.bg-orange-400.text-white
          .mx-auto.max-w-7xl.px-4.sm:px-6.lg:px-8
            .flex.justify-between
              .flex
                .text-center Swipe is a training tool - it does not offer a real product for actual use. Please see ___ for more details
        %nav.border-b.border-gray-200.bg-white
          .mx-auto.max-w-7xl.px-4.sm:px-6.lg:px-8
            .flex.h-16.justify-between
              .flex
                .flex.flex-shrink-0.items-center
                  %img.block.h-8.w-auto.lg:hidden{:alt => "Your Company", :src => "https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"}/
                  %img.hidden.h-8.w-auto.lg:block{:alt => "Your Company", :src => "https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"}/
                  .ml-2 SWIPE
                .hidden.sm:-my-px.sm:ml-6.sm:flex.sm:space-x-8
                  / Current: "border-indigo-500 text-gray-900", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700"
                  %a.border-indigo-500.text-gray-900.inline-flex.items-center.border-b-2.px-1.pt-1.text-sm.font-medium{"aria-current" => "page", :href => "#"} Products
                  %a.border-transparent.text-gray-500.hover:border-gray-300.hover:text-gray-700.inline-flex.items-center.border-b-2.px-1.pt-1.text-sm.font-medium{:href => "#"} Team
                  %a.border-transparent.text-gray-500.hover:border-gray-300.hover:text-gray-700.inline-flex.items-center.border-b-2.px-1.pt-1.text-sm.font-medium{:href => "#"} Projects
                  %a.border-transparent.text-gray-500.hover:border-gray-300.hover:text-gray-700.inline-flex.items-center.border-b-2.px-1.pt-1.text-sm.font-medium{:href => "#"} Calendar
              .hidden.sm:ml-6.sm:flex.sm:items-center
                %button.relative.rounded-full.bg-white.p-1.text-gray-400.hover:text-gray-500.focus:outline-none.focus:ring-2.focus:ring-indigo-500.focus:ring-offset-2{:type => "button"}
                  %span.absolute{:class => "-inset-1.5"}
                  %span.sr-only View notifications
                  %svg.h-6.w-6{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24"}
                    %path{:d => "M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
                / Profile dropdown
                .relative.ml-3
                  %div
                    %button#user-menu-button.relative.flex.max-w-xs.items-center.rounded-full.bg-white.text-sm.focus:outline-none.focus:ring-2.focus:ring-indigo-500.focus:ring-offset-2{"aria-expanded" => "false", "aria-haspopup" => "true", :type => "button"}
                      %span.absolute{:class => "-inset-1.5"}
                      %span.sr-only Open user menu
                      %img.h-8.w-8.rounded-full{:alt => "", :src => "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"}/
                  /
                    Dropdown menu, show/hide based on menu state.
                    
                    Entering: "transition ease-out duration-200"
                    From: "transform opacity-0 scale-95"
                    To: "transform opacity-100 scale-100"
                    Leaving: "transition ease-in duration-75"
                    From: "transform opacity-100 scale-100"
                    To: "transform opacity-0 scale-95"
                  .absolute.right-0.z-10.mt-2.w-48.origin-top-right.rounded-md.bg-white.py-1.shadow-lg.ring-1.ring-black.ring-opacity-5.focus:outline-none{"aria-labelledby" => "user-menu-button", "aria-orientation" => "vertical", :role => "menu", :tabindex => "-1"}
                    / Active: "bg-gray-100", Not Active: ""
                    %a#user-menu-item-0.block.px-4.py-2.text-sm.text-gray-700{:href => "#", :role => "menuitem", :tabindex => "-1"} Your Profile
                    %a#user-menu-item-1.block.px-4.py-2.text-sm.text-gray-700{:href => "#", :role => "menuitem", :tabindex => "-1"} Settings
                    %a#user-menu-item-2.block.px-4.py-2.text-sm.text-gray-700{:href => "#", :role => "menuitem", :tabindex => "-1"} Sign out
              .-mr-2.flex.items-center.sm:hidden
                / Mobile menu button
                %button.relative.inline-flex.items-center.justify-center.rounded-md.bg-white.p-2.text-gray-400.hover:bg-gray-100.hover:text-gray-500.focus:outline-none.focus:ring-2.focus:ring-indigo-500.focus:ring-offset-2{"aria-controls" => "mobile-menu", "aria-expanded" => "false", :type => "button"}
                  %span.absolute{:class => "-inset-0.5"}
                  %span.sr-only Open main menu
                  / Menu open: "hidden", Menu closed: "block"
                  %svg.block.h-6.w-6{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24"}
                    %path{:d => "M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
                  / Menu open: "block", Menu closed: "hidden"
                  %svg.hidden.h-6.w-6{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24"}
                    %path{:d => "M6 18L18 6M6 6l12 12", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
          / Mobile menu, show/hide based on menu state.
          #mobile-menu.sm:hidden
            .space-y-1.pb-3.pt-2
              / Current: "border-indigo-500 bg-indigo-50 text-indigo-700", Default: "border-transparent text-gray-600 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-800"
              %a.border-indigo-500.bg-indigo-50.text-indigo-700.block.border-l-4.py-2.pl-3.pr-4.text-base.font-medium{"aria-current" => "page", :href => "#"} Products
              %a.border-transparent.text-gray-600.hover:border-gray-300.hover:bg-gray-50.hover:text-gray-800.block.border-l-4.py-2.pl-3.pr-4.text-base.font-medium{:href => "#"} Team
              %a.border-transparent.text-gray-600.hover:border-gray-300.hover:bg-gray-50.hover:text-gray-800.block.border-l-4.py-2.pl-3.pr-4.text-base.font-medium{:href => "#"} Projects
              %a.border-transparent.text-gray-600.hover:border-gray-300.hover:bg-gray-50.hover:text-gray-800.block.border-l-4.py-2.pl-3.pr-4.text-base.font-medium{:href => "#"} Calendar
            .border-t.border-gray-200.pb-3.pt-4
              .flex.items-center.px-4
                .flex-shrink-0
                  %img.h-10.w-10.rounded-full{:alt => "", :src => "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"}/
                .ml-3
                  .text-base.font-medium.text-gray-800 Tom Cook
                  .text-sm.font-medium.text-gray-500 tom@example.com
                %button.relative.ml-auto.flex-shrink-0.rounded-full.bg-white.p-1.text-gray-400.hover:text-gray-500.focus:outline-none.focus:ring-2.focus:ring-indigo-500.focus:ring-offset-2{:type => "button"}
                  %span.absolute{:class => "-inset-1.5"}
                  %span.sr-only View notifications
                  %svg.h-6.w-6{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24"}
                    %path{:d => "M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
              .mt-3.space-y-1
                %a.block.px-4.py-2.text-base.font-medium.text-gray-500.hover:bg-gray-100.hover:text-gray-800{:href => "#"} Your Profile
                %a.block.px-4.py-2.text-base.font-medium.text-gray-500.hover:bg-gray-100.hover:text-gray-800{:href => "#"} Settings
                %a.block.px-4.py-2.text-base.font-medium.text-gray-500.hover:bg-gray-100.hover:text-gray-800{:href => "#"} Sign out
      = yield
