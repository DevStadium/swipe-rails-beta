%html.h-full
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SwipeRailsAppV1
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
