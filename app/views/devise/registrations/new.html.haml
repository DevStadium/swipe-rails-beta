.bg-gray-900
  .flex.min-h-full.flex-col.justify-center.px-6.py-12.lg:px-8
    .sm:mx-auto.sm:w-full.sm:max-w-sm
      %img.mx-auto.h-10.w-auto{:alt => "Your Company", :src => "https://tailwindui.com/img/logos/mark.svg?color=orange&shade=500"}/
      %h2.mt-10.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-white Sign up, then $WIPE

    .mt-10.sm:mx-auto.sm:w-full.sm:max-w-sm
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .space-y-6
          %div
            %label.block.text-sm.font-medium.leading-6.text-white{:for => "email"} Email address
            .mt-2
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 text-white shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white/5 py-1.5 ring-white/10"
          %div
            .flex.items-center.justify-between
              %label.block.text-sm.font-medium.leading-6.text-white{:for => "password"} Password
              .text-sm.text-orange-100
                (#{@minimum_password_length} characters minimum)
            .mt-2
              = f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-0 text-white shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white/5 py-1.5 ring-white/10"
          %div
            %label.block.text-sm.font-medium.leading-6.text-white{:for => "password_confirmation"} Confirm Password
            .mt-2
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-0 text-white shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white/5 py-1.5 ring-white/10"
          %div
            = f.submit "Sign up", class: "flex w-full justify-center rounded-md bg-orange-500 px-3 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-500 py-1.5"

    %p.mt-10.text-center.text-sm.text-gray-400
      Already a member?
      %a.font-semibold.leading-6.text-orange-400.hover:text-orange-300{:href => new_session_path(resource_name)} Log in
